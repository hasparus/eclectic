{
  "name": "@hasparus/eslint-plugin",
  "version": "1.0.0",
  "author": "hasparus",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --max-warnings 0 **/*.ts",
    "ci": "pnpm lint && pnpm typecheck",
    "release": "pnpm build && pnpm publish"
  },
  "dependencies": {
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.21.2",
    "@types/node": "^18.15.3",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0"
  }
}
